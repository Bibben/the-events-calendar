/* -----------------------------------------------------------------------------
 *
 * Events Bar
 *
 * ----------------------------------------------------------------------------- */
.tribe-events {
	.tribe-events__events-bar {
		display: flex;
		width: 100%;
		flex-direction: row;
		flex-wrap: wrap;
		align-items: center;
	}

	.tribe-events__events-bar-form {
		flex: 1 1 45%;
	}

	.tribe-events__events-bar-views {
		flex: 1 1 40px;
		display: flex;
		justify-content: center;
	}

	.tribe-events__events-bar-filters {
		display: flex;
		justify-content: flex-end;
	}
}
