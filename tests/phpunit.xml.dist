<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
				 backupStaticAttributes="false"
				 colors="true"
				 convertErrorsToExceptions="true"
				 convertNoticesToExceptions="true"
				 convertWarningsToExceptions="true"
				 processIsolation="false"
				 stopOnFailure="false"
				 syntaxCheck="false"
				 bootstrap="bootstrap.php"
		>
	<testsuites>
		<testsuite name="Events">
			<directory>./core</directory>
			<directory>../../events-calendar-pro/tests/pro</directory>
			<directory>../../tribe-community-events/tests/community</directory>
		</testsuite>
	</testsuites>
	<groups>
		<exclude>
			<group>ignore</group>
		</exclude>
	</groups>
	<filter>
		<whitelist processsUncoveredFilesFromWhitelist="true">
			<directory suffix=".php">..</directory>
			<directory suffix=".php">../../events-calendar-pro</directory>
			<directory suffix=".php">../../tribe-community-events</directory>
			<exclude>
				<directory>.</directory>
				<directory>../../events-calendar-pro/tests</directory>
				<directory>../../tribe-community-events/tests</directory>
			</exclude>
		</whitelist>
	</filter>
</phpunit>