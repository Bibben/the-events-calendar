.tribe-events {

	/* -----------------------------------------------------------------------------
	 * Multiday Event
	 * ----------------------------------------------------------------------------- */

	.tribe-events-calendar-month__multiday-event-wrapper {
		@media (--viewport-medium) {
			height: 19px;
			margin-bottom: var(--spacer-0);
			position: relative;
		}
	}

	.tribe-events-calendar-month__multiday-event {
		background-color: var(--color-background);
		position: relative;
		width: 100%;
		z-index: var(--z-index-multiday-event);
	}

	.tribe-events-calendar-month__multiday-event--width-2 {
		width: calc(200% + 1px);
	}

	.tribe-events-calendar-month__multiday-event--width-3 {
		width: calc(300% + 2px);
	}

	.tribe-events-calendar-month__multiday-event--width-4 {
		width: calc(400% + 3px);
	}

	.tribe-events-calendar-month__multiday-event--width-5 {
		width: calc(500% + 4px);
	}

	.tribe-events-calendar-month__multiday-event--width-6 {
		width: calc(600% + 5px);
	}

	.tribe-events-calendar-month__multiday-event--width-7 {
		width: calc(700% + 6px);
	}

	.tribe-events-calendar-month__multiday-event-inner {
		align-items: center;
		cursor: pointer;
		display: flex;
		flex-wrap: nowrap;
		padding: 1px var(--spacer-3);
	}

	.tribe-events-calendar-month__multiday-event-featured-icon {
		flex: none;
		margin-right: 5px;
	}

	.tribe-events-calendar-month__multiday-event-title {
		flex: auto;
	}
}
