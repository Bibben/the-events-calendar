/**
 * Elementor Event Website Widget styles.
 *
 * @since TBD
 */

.tec-events-elementor-event-widget__navigation,
.tribe-events-content .tec-events-elementor-event-widget__navigation,
#tribe-events-pg-template .tec-events-elementor-event-widget__navigation {
	.tec-events-elementor-event-widget__navigation--subnav {
		display: flex;
		justify-content: space-between;
		list-style: none;
	}

	.tec-events-elementor-event-widget__navigation--next,
	.tec-events-elementor-event-widget__navigation--previous {
		a {
			border-bottom: 0;
			text-decoration: none;
		}

		a > span {
			display: none;
		}

		svg {
			height: 1.1em;
			vertical-align: text-top;
			width: 0.6em;

			> path {
				fill: currentColor;
			}
		}
	}

	.tec-events-elementor-event-widget__navigation--previous {
		svg {
			margin-right: 8px;
		}
	}

	..tec-events-elementor-event-widget__navigation--next {
		svg {
			margin-left: 8px;
		}
	}
}
