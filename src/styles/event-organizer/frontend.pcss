/**
 * Organizer block view styles
 *
 * @since  0.2.4-alpha
 */
.tribe-block__organizer__details {
	margin: 15px 0;
	padding: 22.5px 0;
	position: relative;
	border-top: 1px solid #d5d5d5;

	@media screen and (min-width: 768px) {
		padding: 32px 0;
	}

	h3 {
		font-weight: normal;
		font-size: 1rem;
		line-height: 1.64;
		letter-spacing: normal;
		margin-bottom: 4px;
		margin-top: 0;

		a {
			color: #334aff;
		}
	}

	p {
		font-size: 1rem;
		font-weight: normal;
		color: #141827;
		line-height: 1.64;
		letter-spacing: normal;
		margin-bottom: 2px;
		margin-top: 0;
	}
}

.tribe-block__organizer__website a {
	color: #334aff;
	letter-spacing: normal;
}

/* Theme specific overrides */

/* Twenty-twenty theme */
.theme-twentytwenty .tribe-block__organizer__details h3,
.theme-twentytwenty .tribe-block__organizer__details p {
	font-size: 1.65rem;
}

/* Divi */
.theme-Divi .tribe-block__organizer__details h3,
.theme-Divi .tribe-block__organizer__details p {
	padding-bottom: 0;
}

/* Genesis */
.theme-genesis .tribe-block__organizer__details h3,
.theme-genesis .tribe-block__organizer__details p {
	font-size: 1.65rem;
}