.tribe-events {

	/* -----------------------------------------------------------------------------
	 * Multiday Event
	 * ----------------------------------------------------------------------------- */

	.tribe-events-calendar-month__multiday-event-wrapper {
		@media (--viewport-medium) {
			height: 19px;
			margin-bottom: var(--spacer-0);
			position: relative;
		}
	}

	.tribe-events-calendar-month__multiday-event--hidden {
		opacity: 0;
	}

	.tribe-events-calendar-month__multiday-event--width-2 {

		.tribe-events-calendar-month__multiday-event-bar {
			width: calc(200% + 1px);
		}
	}

	.tribe-events-calendar-month__multiday-event--width-3 {

		.tribe-events-calendar-month__multiday-event-bar {
			width: calc(300% + 2px);
		}
	}

	.tribe-events-calendar-month__multiday-event--width-4 {

		.tribe-events-calendar-month__multiday-event-bar {
			width: calc(400% + 3px);
		}
	}

	.tribe-events-calendar-month__multiday-event--width-5 {

		.tribe-events-calendar-month__multiday-event-bar {
			width: calc(500% + 4px);
		}
	}

	.tribe-events-calendar-month__multiday-event--width-6 {

		.tribe-events-calendar-month__multiday-event-bar {
			width: calc(600% + 5px);
		}
	}

	.tribe-events-calendar-month__multiday-event--width-7 {

		.tribe-events-calendar-month__multiday-event-bar {
			width: calc(700% + 6px);
		}
	}

	.tribe-events-calendar-month__multiday-event--display {

		.tribe-events-calendar-month__multiday-event-hidden {
			position: absolute;
			width: 100%;
		}
	}

	.tribe-events-calendar-month__multiday-event-hidden {
		opacity: 0;
	}

	.tribe-events-calendar-month__multiday-event-hidden-link {
		position: absolute;
		height: 100%;
		width: 100%;
	}

	.tribe-events-calendar-month__multiday-event-bar {
		background-color: var(--color-background);
		overflow: hidden;
		width: 100%;
	}

	.tribe-events-calendar-month__multiday-event-bar-inner {
		align-items: center;
		cursor: pointer;
		display: flex;
		flex-wrap: nowrap;
		padding: 1px var(--spacer-3);
	}

	.tribe-events-calendar-month__multiday-event-bar-featured-icon {
		flex: none;
		margin-right: 5px;
	}

	.tribe-events-calendar-month__multiday-event-bar-title {
		flex: auto;
		overflow: hidden;
		white-space: nowrap;
	}
}
