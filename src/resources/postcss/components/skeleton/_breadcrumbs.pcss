/* -----------------------------------------------------------------------------
 *
 * Breadcrumbs
 *
 * ----------------------------------------------------------------------------- */

.tribe-events {

	.tribe-events-c-breadcrumbs {
		margin-bottom: var(--tec-spacer-13);
		width: 100%;

		.tribe-common--breakpoint-medium& {
			margin-bottom: var(--tec-spacer-9);
		}
	}

	.tribe-events-c-breadcrumbs__list {
		display: flex;
		flex-wrap: wrap;
	}

	.tribe-events-c-breadcrumbs__list-item {
		align-items: center;
		display: inline-flex;

		&:last-child {

			.tribe-events-c-breadcrumbs__list-item-icon-svg {
				display: none;
			}
		}
	}

	.tribe-events-c-breadcrumbs__list-item-icon-svg {
		display: inline-block;
			height: 8px;
			margin: 0 var(--tec-spacer-0);
			width: 8px;

		path {
			fill: currentColor;
		}
	}
}
