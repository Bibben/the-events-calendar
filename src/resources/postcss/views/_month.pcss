.tribe-events {

	.tribe-events-calendar-month__event {
		margin: var(--spacer-1) 0;
		position: relative;
	}

	.tribe-events-calendar-month__event-featured-image-wrapper {
		margin-bottom: var(--spacer-0);
	}

	.tribe-events-calendar-month__event-datetime {
		@mixin mobile-body-3;

		color: var(--color-text-secondary);
	}

	.tribe-events-calendar-month__event-datetime-featured {
		display: inline-block;
		margin-left: 5px;
	}

	.tribe-events-calendar-month__event-title {
		font-weight: var(--font-weight-regular);
	}

	.tribe-events-calendar-month__event-title-link {

		&:focus,
		&:hover {
			text-decoration: underline;
		}
	}

	.tribe-events-calendar-month__event-tooltip {
		background-color: var(--color-background);
		border: 1px solid var(--color-border-default);
		box-shadow: var(--box-shadow-tooltip);
		display: none;
		left: calc(var(--spacer-7) * -1);
		padding: var(--spacer-4);
		position: absolute;
		top: calc(100% + var(--spacer-1));
		width: calc(100% + (2 * var(--spacer-7)));
	}

	.tribe-events-calendar-month__event-tooltip-featured-image-wrapper {
		margin-bottom: var(--spacer-2);
	}

	.tribe-events-calendar-month__event-tooltip-cta {
		margin-top: var(--spacer-2);
	}
}
